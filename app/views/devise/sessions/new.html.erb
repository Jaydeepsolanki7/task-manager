<section class="vh-100" style="background-color: #9A616D;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                  <div class="d-flex align-items-center mb-3 pb-1">
                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                    <span class="h1 fw-bold mb-0">Task Manager</span>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                  <div class="form-outline mb-4">
                    <%= f.email_field :email, class: "form-control form-control-lg", id: "form2Example17" %>
                    <%= f.label :email, class: "form-label", for: "form2Example17" %>
                  </div>

                  <div class="form-outline mb-4">
                    <%= f.password_field :password, class: "form-control form-control-lg", id: "form2Example27" %>
                    <%= f.label :password, class: "form-label", for: "form2Example27" %>
                  </div>

                  <div class="pt-1 mb-4">
                  <%= f.submit "Login", class: "btn btn-dark btn-lg btn-block", type: "submit" %>
                  </div>

                  <a class="small text-muted" href="#!">Forgot password?</a>
                  <p class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account? <%= link_to "Register here", new_user_registration_path %></p>
                  <%= link_to "Terms of use.", '#', class: "small text-muted" %>
                  <%= link_to "Privacy policy", '#', class: "small text-muted" %>

                <% end %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
