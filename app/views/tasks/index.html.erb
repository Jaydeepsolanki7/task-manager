<div class="container mt-5">
  <h1 class="display-4 mb-4">Tasks</h1>

  <ul class="list-group">
    <% @tasks.each do |task| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to task.title, task, style: "text-decoration: none;" %>
        <span class="badge bg-primary rounded-pill"><%= task.created_at.strftime('%b %d, %Y') %></span>
      </li>
    <% end %>
  </ul>

  <div class="mt-4">
    <%= link_to "New Task", new_task_path, class: "btn btn-primary" %>
  </div>
</div>
